<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_marginRight="80dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/BackButton"
            android:src="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:id="@+id/catNext"
            android:layout_marginRight="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="30sp"
            android:textColor="#015054"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_shopping_cart_24"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:text="All"
                android:textSize="18dp"
                android:id="@+id/allCat"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Clothes"
                android:textColor="@color/black"
                android:id="@+id/clothesCat"
                android:textSize="18dp"
                android:onClick="onClothesButtonClick"
                android:background="@drawable/round_button" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Bag"
                android:id="@+id/bagCat"
                android:onClick="onBagButtonClick"
                android:textSize="18dp"
                android:background="@drawable/round_button"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Accesories"
                android:id="@+id/accessCat"
                android:onClick="onAccButtonClick"
                android:textSize="18dp"
                android:background="@drawable/round_button"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- FrameLayout to hold the fragment -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"/>

</LinearLayout>
